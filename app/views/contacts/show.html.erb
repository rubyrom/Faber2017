<h1><%= @contact.name %></h1>
<h3> Телефон:  <%= @contact.phone %>  Email: <%= @contact.email %> </h3>
<p>
  <%= @contact.message %>
</p>

<h2>Комментарии:</h2>
<% @contact.comments.each do |c| %>
  <p>
    <i><%= c.author %> сказал:</i><br />
    <%= c.body %>
  </p>

<% end %>

<h2>Добавить комментрий</h2>

<p>
<%= form_for([@contact, @contact.comments.build]) do |f| %>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</p>
